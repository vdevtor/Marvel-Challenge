<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_marvel2"
    tools:context=".view.activity.RegisterActivity">

    <FrameLayout
        android:id="@+id/redLabelLogin"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/container_red_telalogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/whiteLabelRegister"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/container_telalogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:id="@+id/etNomeRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="13dp"
        android:hint="Name"
        android:focusable="true"
        android:focusedByDefault="true"
        android:textColor="@color/blue_marvel"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/blue_marvel"
        app:layout_constraintEnd_toEndOf="@id/whiteLabelRegister"
        app:layout_constraintStart_toStartOf="@id/whiteLabelRegister"
        app:layout_constraintTop_toTopOf="@id/whiteLabelRegister" />

    <EditText
        android:id="@+id/etEmailRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="13dp"
        android:hint="Email"
        android:textColor="@color/blue_marvel"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/blue_marvel"
        app:layout_constraintEnd_toEndOf="@id/whiteLabelRegister"
        app:layout_constraintStart_toStartOf="@id/whiteLabelRegister"
        app:layout_constraintTop_toBottomOf="@id/etNomeRegister"/>

    <EditText
        android:id="@+id/etSenhaRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="13dp"
        android:hint="Password"
        android:textColor="@color/blue_marvel"
        android:inputType="textPassword"
        android:textColorHint="@color/blue_marvel"
        app:layout_constraintEnd_toEndOf="@id/whiteLabelRegister"
        app:layout_constraintStart_toStartOf="@id/whiteLabelRegister"
        app:layout_constraintTop_toBottomOf="@id/etEmailRegister"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:textColor="@color/white_marvel"
        android:text="SAVE"
        android:textSize="12.5dp"
        android:textStyle="bold"
        android:fontFamily="@font/avengersfont"
        android:backgroundTint="@color/red_marvel"
        app:layout_constraintStart_toStartOf="@id/whiteLabelRegister"
        app:layout_constraintEnd_toEndOf="@id/whiteLabelRegister"
        app:layout_constraintBottom_toBottomOf="@id/whiteLabelRegister"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatar"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/spiderman"
        app:layout_constraintStart_toStartOf="@id/redLabelLogin"
        app:layout_constraintEnd_toEndOf="@id/redLabelLogin"
        app:layout_constraintBottom_toTopOf="@id/whiteLabelRegister"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:src="@drawable/ic_baseline_camera_alt_24"

        app:layout_constraintBottom_toBottomOf="@id/userAvatar"
        app:layout_constraintEnd_toEndOf="@id/userAvatar"
        />





</androidx.constraintlayout.widget.ConstraintLayout>