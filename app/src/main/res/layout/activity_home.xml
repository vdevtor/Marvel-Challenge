<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_marvel2"
    tools:context=".view.activity.HomeActivity">

    <ImageView
        android:id="@+id/ivSpiderButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/spiderpng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivThorButton"
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/thorpng"
        app:layout_constraintStart_toEndOf="@id/ivSpiderButton"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/ivCaptainButton"
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:scaleType="fitXY"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/captainpng"
        app:layout_constraintStart_toEndOf="@id/ivThorButton"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>